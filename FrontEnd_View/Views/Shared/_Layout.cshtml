                                        @if (sideBarNameList != null && sideBarNameList.Contains("Outgoing Orders"))
                                        {
                                            <li>
                                                <a href="/Outgoing/GetOutORders">
                                                    <i class="far fa-newspaper"></i>
                                                    <span>Order</span>
                                                </a>
                                            </li>
                                        }
                                        @if (sideBarNameList != null && sideBarNameList.Contains("Customer"))
                                        {
                                            <li>
                                                <a href="/Outgoing/Index">
                                                    <i class="fab fa-wpforms"></i>
